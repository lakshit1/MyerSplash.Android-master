<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:layout_height="60dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pivot_item_0"
            style="@style/PivotItem"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:alpha="1"
            android:text="@string/pivot_new"/>

        <TextView
            android:id="@+id/pivot_item_1"
            style="@style/PivotItem"
            android:alpha="0.3"
            android:text="@string/pivot_featured"/>

        <TextView
            android:id="@+id/pivot_item_2"
            style="@style/PivotItem"
            android:alpha="0.3"
            android:text="@string/pivot_highlights"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/more_btn"
        android:layout_width="@dimen/pivot_bar_element_width"
        android:layout_height="@dimen/pivot_title_bar_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:alpha="0.3"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/image_desc"
        android:padding="12dp"
        android:src="@drawable/ic_more"/>
</RelativeLayout>